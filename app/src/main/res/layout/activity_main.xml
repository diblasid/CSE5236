<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause This Activity"
        android:onClick="getPauseDialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop This Activity"
        android:onClick="getOtherActivityAndStop"/>

    <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Destroy This Activity"
     android:onClick="getOtherActivityAndDestroy"/>




</LinearLayout>